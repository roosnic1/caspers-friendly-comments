{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "rootDir": "src",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        //"lib": ["esnext"],
        "esModuleInterop": true
    },
    "include": ["./src/"],
    "exclude": ["./src/*.test.ts"]
}
