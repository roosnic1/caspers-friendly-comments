{
    "name": "rest-express",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "setup": "DATABASE_URL='file:./dev.db' prisma migrate dev",
        "dev": "DATABASE_URL='file:./dev.db' nodemon ./src/index.ts",
        "tailwind:css": "postcss styles/tailwind.css -o public/style.css",
        "test": "NODE_ENV=test DATABASE_URL='file:./test_dev.db' jest --testTimeout=10000",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "prepare": "husky install"
    },
    "dependencies": {
        "@prisma/client": "4.2.1",
        "autoprefixer": "^10.4.8",
        "express": "4.18.1",
        "moment": "^2.29.4",
        "postcss": "^8.4.16",
        "postcss-cli": "^10.0.0",
        "pug": "^3.0.2",
        "tailwindcss": "^3.1.8"
    },
    "devDependencies": {
        "@types/express": "4.17.13",
        "@types/jest": "^28.1.8",
        "@types/node": "16.11.55",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.34.0",
        "@typescript-eslint/parser": "^5.34.0",
        "eslint": "^8.22.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "lint-staged": "^13.0.3",
        "nodemon": "^2.0.19",
        "prettier": "^2.7.1",
        "prisma": "4.2.1",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.8",
        "ts-node": "10.9.1",
        "typescript": "^4.7.4"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
